{% extends 'base.html.twig' %}


{% block body %}
    <article>
        <h1>{{ giveaway.title }}</h1>
        <div class="metadata">
            Created on {{ giveaway.createdAt|date('d/m/Y') }} at {{ giveaway.createdAt|date('H:i') }} in the {{ giveaway.category.title }} category
        </div>
        <div class="content">
            <img src="{{ giveaway.image }}" alt="">
            {{ giveaway.content|raw }}
        </div>
    </article>
    <section id="comments">
        <h3>{{ giveaway.comments | length }} Comments</h3>
        {% for comment in giveaway.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author }} (<small>{{ comment.createdAt | date('d/m/Y at H:i') }}</small>)
                </div>
                <div class="col">
                    {{ comment.content | raw }}
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
{% endblock %}